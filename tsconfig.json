{
  "compilerOptions": {
    "lib": ["es2020"],
    "types": ["node"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "strict": false,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}